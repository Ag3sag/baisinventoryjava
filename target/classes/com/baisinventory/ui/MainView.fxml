<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.image.Image?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.baisinventory.controller.MainController"
      alignment="CENTER"
      spacing="20"
      stylesheets="@main.css"
      style="-fx-padding: 40; -fx-background-color: #f1f5f9;">


    <!-- Logo -->
    <HBox alignment="TOP_LEFT" style="-fx-padding: 10;">
        <ImageView fx:id="logoGeneral" layoutX="10" layoutY="10" fitWidth="80" fitHeight="80" preserveRatio="true">
            <image>
                <Image url="@../images/Logo.png"/>
            </image>
        </ImageView>
    </HBox>

    <!-- Título y rol -->
    <Label text="📦 Bais Inventory" styleClass="title"/>
    <Label fx:id="lblRol" styleClass="rol"/>

    <!-- Opciones -->
    <HBox fx:id="hboxOpciones" spacing="20" alignment="CENTER" styleClass="opciones">
        <Button fx:id="btnUsuarios" text="👤 Gestión de Usuarios" styleClass="opcion"/>
        <Button fx:id="btnRepuestos" text="🔧 Gestión de Repuestos" styleClass="opcion"/>
        <Button fx:id="btnEnsambles" text="🛠 Ensambles" styleClass="opcion"/>
        <Button fx:id="btnReportes" text="📊 Reportes" styleClass="opcion"/>
        <Button fx:id="btnExportaciones" text="📤 Exportaciones" styleClass="opcion"/>
    </HBox>

    <!-- Botón Logout centrado -->
    <HBox alignment="CENTER" style="-fx-padding: 20;">
        <Button fx:id="btnLogout" text="🚪 Cerrar sesión" styleClass="logout-btn"/>
    </HBox>

</VBox>