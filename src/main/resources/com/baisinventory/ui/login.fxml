<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.baisinventory.controller.LoginController"
      alignment="CENTER"
      spacing="15"
      stylesheets="@login.css"
      style="-fx-background-color: #e8f0fe; -fx-padding: 40;"
        prefWidth="400" prefHeight="400">


    <HBox style="-fx-padding: 10;" alignment="CENTER">
        <ImageView fx:id="logoLogin" fitWidth="200" fitHeight="200" preserveRatio="true">
            <image>
                <Image url="@/images/Logo.png"/>
            </image>
        </ImageView>
    </HBox>

    <Label text="BAIS Inventory"
           styleClass="title"/>

    <TextField fx:id="txtUsername" promptText="Clave de acceso"/>
    <PasswordField fx:id="txtPassword" promptText="Contraseña"/>

    <HBox alignment="CENTER" prefWidth="400" spacing="10">
        <Button text="Iniciar sesión"
                fx:id="btnLogin"
                onAction="#handleLogin"
                styleClass="btn-login"/>
    </HBox>
</VBox>